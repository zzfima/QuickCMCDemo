<Window x:Class="QuickCMC.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:QuickCMC.UI"
        xmlns:view="clr-namespace:QuickCMCDemo.MVVMCross.View;assembly=QuickCMCDemo.MVVMCross"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="800">
    <DockPanel>
        <!-- Top Menu -->
        <Menu DockPanel.Dock="Top" Background="LightGray">
            <MenuItem Click="StartSimulation_Click">
                <MenuItem.Header>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <Image Source="/Icons/simulation.png" Width="32" Height="32"/>
                        <TextBlock Text="Start simulation" HorizontalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
            <MenuItem Click="Exit_Click">
                <MenuItem.Header>
                    <StackPanel Orientation="Vertical" Margin="5">
                        <Image Source="/Icons/power-button.png" Width="32" Height="32"/>
                        <TextBlock Text="Exit" HorizontalAlignment="Center"/>
                    </StackPanel>
                </MenuItem.Header>
            </MenuItem>
        </Menu>
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <view:AnalogOutputsView Grid.Column="0" Grid.Row="0" Margin="10" DataContext="{Binding AnalogOutputsVM}" Width="300" HorizontalAlignment="Left"/>
        </Grid>
    </DockPanel>
</Window>
